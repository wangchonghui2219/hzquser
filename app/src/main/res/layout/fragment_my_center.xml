<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.hzquser.view.fragment.MyCenterFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="@color/orange"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@mipmap/icon_bg"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_sett"
                android:layout_margin="10dp"
                style="@style/Item_pic_size2"
                android:src="@mipmap/icon_wdshezhi"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:id="@+id/iv_mess"
                    android:layout_margin="10dp"
                    style="@style/Item_pic_size2"
                    android:src="@mipmap/icon_wxiaoxi"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:id="@+id/iv_red"
                    android:visibility="gone"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignTop="@id/iv_mess"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/shape_read"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>


        </RelativeLayout>


        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                >
                <com.dlwx.hzquser.view.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/icon_wdtouxiiang"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/tv_userName"
                    style="@style/text_style_15"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    style="@style/text_style_13"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_exten_code"
                    />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ll_myorder"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                style="@style/Item_pic_size_70"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_wddingdan"
                 />
                <TextView
                   style="@style/text_style_13"
                    android:layout_marginTop="@dimen/spacebetween"
                    android:layout_gravity="center_horizontal"
                    android:text="我的订单"
                    />
        </LinearLayout>
         <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ll_myntegral"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

             <ImageView

                 android:id="@+id/imageView"
                 style="@style/Item_pic_size_70"
                 android:layout_gravity="center_horizontal"
                 android:src="@mipmap/icon_wdjifen" />

             <TextView
                   style="@style/text_style_13"
                    android:layout_marginTop="@dimen/spacebetween"
                    android:layout_gravity="center_horizontal"
                    android:text="我的积分"
                    />
        </LinearLayout>
         <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ll_mycollect"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                style="@style/Item_pic_size_70"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_wdshoucang"
                 />
                <TextView
                   style="@style/text_style_13"
                    android:layout_marginTop="@dimen/spacebetween"
                    android:layout_gravity="center_horizontal"
                    android:text="我的收藏"
                    />
        </LinearLayout>

    </LinearLayout>
    <include

        layout="@layout/space_view"
        />
    <com.dlwx.hzquser.view.MyListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_list"
        ></com.dlwx.hzquser.view.MyListView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
