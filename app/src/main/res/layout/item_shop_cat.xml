<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <CheckBox
            android:id="@+id/cb_check"
            android:padding="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:checked="false"
            android:focusable="false"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selete_check"
            />
            <ImageView
                android:layout_marginLeft="10dp"
                    android:id="@+id/iv_pic"
                style="@style/MyCenter_class"

                 />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                   android:id="@+id/tv_name"
                    style="@style/text_style_13"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:id="@+id/tv_type"
                    style="@style/text_style_11"
                    android:layout_weight="1"
                    />
                    <TextView
                        style="@style/text_style_13"
                        android:text="单价："
                         />
                    <TextView
                        style="@style/text_style_13"
                        android:id="@+id/tv_unitprice"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:id="@+id/tv_price"
                    style="@style/text_style_11"
                    android:textColor="@color/orange"
                    android:layout_weight="1"
                    />
                    <TextView

                       style="@style/text_style_11"
                        android:id="@+id/tv_nums"
                        />
                    <LinearLayout
                        android:id="@+id/ll_edit"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        >
                    <ImageView
                    android:id="@+id/iv_minus"
                    style="@style/Item_pic_size2"
                        android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_gwjian"
                        android:layout_marginRight="10dp"
                    />
                    <TextView
                        android:id="@+id/tv_num"
                        style="@style/text_style_13"
                        android:text="1"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_gravity="center_vertical"
                        />


                    <ImageView
                        android:id="@+id/iv_add"
                        style="@style/Item_pic_size2"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_gwjia"
                        />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>
</LinearLayout>