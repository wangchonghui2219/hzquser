<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.hzquser.view.activity.GetMealCodeActivity">
    <include

        layout="@layout/tool_bar"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <TextView
        style="@style/text_style_15"
        android:padding="10dp"
        android:id="@+id/tv_order_no"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        
        >
        <TextView
            android:id="@+id/tv_mmeal_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/orange"
            />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_meal_code"
            >
            <ImageView
                android:id="@+id/iv_pic"
                android:layout_margin="5dp"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        </RelativeLayout>
    </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_share"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    >
                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/orange"
                        />
                    <TextView
                       style="@style/text_style_13"
                        android:text="分享给："
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="20dp"
                        />
                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/orange"
                        />
                </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        >
                        <ImageView
                            android:id="@+id/iv_shareWX"
                            style="@style/Item_pic_size"
                            android:src="@mipmap/icon_fxweixin"
                             />
                        <ImageView
                            android:id="@+id/iv_shareQQ"
                            style="@style/Item_pic_size"
                            android:layout_marginLeft="40dp"
                            android:src="@mipmap/icon_fxqq"
                             />

                    </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
