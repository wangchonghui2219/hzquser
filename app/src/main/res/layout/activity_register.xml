<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_register">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50px">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    </android.support.v7.widget.Toolbar>

                    <TextView
                        android:id="@+id/title_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:ellipsize="end"
                        android:maxEms="7"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/black_color"
                        android:textSize="13sp" />
                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    style="@style/Item_pic_size2"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_xiugaibangding" />

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/text_style_13"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacebetween"
                    android:layout_weight="1"
                    android:background="@null"

                    android:hint="请输入手机号"
                    android:lines="1"
                    android:padding="5dp" />
            </LinearLayout>

            <View
                style="@style/halvingline"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    style="@style/Item_pic_size2"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_xiugaiyanzheng" />

                <EditText
                    android:id="@+id/et_rigauth"
                    style="@style/text_style_13"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacebetween"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入右侧验证码"
                    android:lines="1"
                    android:padding="5dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"
                    android:id="@+id/iv_auth"
                    />
            </LinearLayout>
            <View
                style="@style/halvingline"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    style="@style/Item_pic_size2"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_xiugaiyanzheng" />

                <EditText
                    android:id="@+id/et_auth"
                    style="@style/text_style_13"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacebetween"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入手机号验证码"
                    android:lines="1"
                    android:padding="5dp" />

                <Button
                    android:id="@+id/btn_auth"
                    style="@style/Auth_code"
                    android:text="验证码"

                    />
            </LinearLayout>

            <View
                style="@style/halvingline"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    style="@style/Item_pic_size2"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_xiugaimima" />

                <EditText
                    android:id="@+id/et_pwd"
                    style="@style/text_style_13"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacebetween"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:padding="5dp"

                    />
            </LinearLayout>

            <View
                style="@style/halvingline"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    style="@style/Item_pic_size2"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_xiugaimima" />

                <EditText
                    android:id="@+id/et_affpwd"
                    style="@style/text_style_13"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacebetween"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:padding="5dp"

                    />


            </LinearLayout>

            <View
                style="@style/halvingline"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView5"
                    style="@style/Item_pic_size2"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_zhucedizhi" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/text_style_13"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacebetween"
                    android:layout_weight="1"
                    android:hint="请选择您的地址"

                    android:padding="5dp"

                    />


            </LinearLayout>

            <View
                style="@style/halvingline"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView6"
                    style="@style/Item_pic_size2"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_zhucedizhi" />

                <EditText
                    android:id="@+id/et_descaddress"
                    style="@style/text_style_13"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacebetween"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入您的详细地址"
                    android:lines="1"
                    android:padding="5dp"

                    />


            </LinearLayout>

            <View
                style="@style/halvingline"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    style="@style/Item_pic_size2"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_zhucetuijianma" />

                <EditText
                    android:id="@+id/et_recomcode"
                    style="@style/text_style_13"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacebetween"
                    android:layout_weight="1"

                    android:background="@null"
                    android:hint="请输入推荐人的平台号(选填)"
                    android:padding="5dp"

                    />


            </LinearLayout>

            <View
                style="@style/halvingline"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <Button
                android:id="@+id/btn_submit"
                style="@style/Buton_style"
                android:layout_marginTop="20dp"
                android:text="注册" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selete_check"
                    android:button="@null"
                    android:checked="true" />

                <TextView
                    style="@style/text_style_13"
                    android:layout_gravity="center_vertical"
                    android:text="我已看过并同意" />

                <TextView
                    android:id="@+id/tv_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="《合之奇用户协议》"
                    android:textColor="@color/orange" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_13"
                    android:text="已有账号，" />

                <TextView
                    android:id="@+id/tv_gologin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="立即登录"
                    android:textColor="@color/orange"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
