<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.hzquser.view.activity.MenuDetailsActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="50px"/>

    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"></android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_share"
                style="@style/Item_pic_size2"
                android:src="@mipmap/icon_cpxqfx"
                 />
            <ImageView
                android:id="@+id/iv_collect"
                android:layout_marginLeft="20dp"
                style="@style/Item_pic_size2"
                android:src="@mipmap/icon_cpxqsc"
                 />
            <ImageView
                android:id="@+id/iv_shopcat"
                android:layout_marginLeft="20dp"
                style="@style/Item_pic_size2"
                android:src="@mipmap/icon_cpxqgw"
                 />

        </LinearLayout>

   </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

        <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                style="@style/text_style_15"
                android:id="@+id/tv_name"
                />
             <TextView
                style="@style/text_style_13"
                android:id="@+id/tv_type"
                />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_prepric"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            >

            <TextView
                style="@style/text_style_12"
                android:id="@+id/tv_price"
                android:layout_centerInParent="true"


                />
            <View

                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="@color/gary_bg"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
            <TextView
                android:id="@+id/tv_Preprice"
               style="@style/text_style_15"
                android:textColor="@color/orange"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                />

    </LinearLayout>
    <View
        style="@style/halvingline"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <ImageView
            style="@style/Item_pic_size4"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xqkucun"
             />
            <TextView
                android:layout_gravity="center_vertical"
                style="@style/text_style_11"
                android:id="@+id/tv_sale"
                 />
        <ImageView
            android:layout_marginLeft="20dp"
            style="@style/Item_pic_size4"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xqjifen"
            />
        <TextView
            android:layout_gravity="center_vertical"

            style="@style/text_style_11"
            android:id="@+id/tv_integral"
            />
    </LinearLayout>
        <TextView
            android:padding="10dp"
            style="@style/text_style_15"
            android:text="商品详情"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/textView2"
            style="@style/text_style_13"
            android:padding="10dp"
            android:text="菜品可根据当日菜品，两荤一素" />

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv_details"
                android:layout_margin="10dp"
                />
    </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_shop"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView

               style="@style/Item_pic_size"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_cpxqjdp"
                />
            <TextView
               style="@style/text_style_12"
                android:text="店铺"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            >
            <Button
                android:id="@+id/btn_jobshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:text="加入购物车"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/btn_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:text="购买"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
