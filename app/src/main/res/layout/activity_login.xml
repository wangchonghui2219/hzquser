<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_login"
            >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:background="@color/trans"

        >
        <RelativeLayout
            android:id="@+id/rl_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                style="@style/Item_pic_size3"
                android:src="@mipmap/icon_jiantoubaise"
                 />

        </RelativeLayout>
    </RelativeLayout>

        </RelativeLayout>
        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/Item_pic_size2"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xiugaibangding"
                />
        <EditText
            android:id="@+id/et_phone"
            style="@style/text_style_13"
            android:layout_marginLeft="@dimen/spacebetween"
            android:hint="请输入手机号"
            android:padding="5dp"
            android:background="@null"
            android:inputType="phone"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"

            />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/halvingline"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/Item_pic_size2"
            android:layout_gravity="center_vertical"
           android:src="@mipmap/icon_xiugaimima"
            />
        <EditText
            android:id="@+id/et_pwd"
            style="@style/text_style_13"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/spacebetween"
            android:hint="请输入密码"
            android:background="@null"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"

            />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/halvingline"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            >

        <TextView
            android:id="@+id/tv_findpwd"
            style="@style/text_style_13"

            android:text="忘记密码？"

            />

        </LinearLayout>
    </RelativeLayout>
    <Button
        style="@style/Buton_style"
        android:text="登录"
        android:id="@+id/btn_submit"

        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/tv_regis"
            style="@style/text_style_13"
            android:layout_gravity="center_horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="100dp"
            android:text="注册"

            />
        <TextView
            style="@style/text_style_13"
            android:text="更多登录方式"
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
               style="@style/Item_pic_size"
                android:id="@+id/iv_wxLogin"
                android:src="@mipmap/icon_weixin"
                android:layout_marginRight="20dp"
                />

            <ImageView
                android:id="@+id/iv_qqlogin"
                style="@style/Item_pic_size"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/icon_qq" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
